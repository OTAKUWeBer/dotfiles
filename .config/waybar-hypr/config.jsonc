{
    "height": 20,
    "layer": "top",
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode",
        "hyprland/scratchpad"
        // "hyprland/window"
    ],
    "modules-center": [
        "clock",
        "custom/exit"
