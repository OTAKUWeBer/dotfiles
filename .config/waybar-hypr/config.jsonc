    "pulseaudio": {
        "max-volume": 150,
        "scroll-step": 5,
        "format": "{icon}:{volume}%",
        "format-muted": "Û∞ùü",
        "tooltip-format": "{volume}%",
        "format-icons": {
            "default": [
                "ÔÄ¶",
                "ÔÄß ",
                "ÔÄ® "
            ]
        },
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_SINK@ toggle"

    },
    "custom/exit": {
        "format": " ‚èª ",
